<div id="salestable" class="fourfifth wrap">
  <!--table searh bar-->
  <form class="search">
          <input type="text" placeholder="Search Keyword">
        <button class="lmargin wfont" type="submit">Search</button>
      </form>
  <table id="salescontent" class="sortable">
    <thead>
      <!--table headers-->
      <tr>
        <th class="wfont">SKU</th>
        <th class="wfont">Name</th>
        <th class="wfont">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <!--replace contents with ruby variables-->
        <td><%= product.SKU %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>